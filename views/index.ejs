<%- include("partials/header.ejs") %>

<div class="post-container">
    <% if (locals.posts && posts.length > 0) { %>
        <% posts.forEach((post, index) => { %>
            <div class="posts">
                <h1><%= post["title"] %></h1>
            <p 
            class=""><%= post["content"] %>    
            </p>
            <div class="row">
                <div class="col">
                    <form action="/delete" method="POST">
                        <input type="hidden" name="index" value="<%= index %>"> <!-- Add hidden input to pass the index -->
                        <button type="submit">Delete</button>
                    </form>
                </div>
                <div class="col">
                    <form action="/edit" method="POST">
                        <input type="hidden" name="index" value="<%= index %>"> <!-- Add hidden input to pass the index -->
                        <button type="submit">Edit</button>
                    </form>  
                </div>
            </div>
            </div>
        <% }) %>
    <% } else { %>
</div>
    <div class="container">
        <div class="row">
            <div class="col date-time">
                <h3 id="current-time" class="dt"><span></span></h3>
            </div>
            <div class="col date-time">
                <h3 class="dt"><%= date %></h3>
            </div>
        </div>
    </div>
    <% } %>

    

<%- include("partials/footer.ejs") %>


   

    